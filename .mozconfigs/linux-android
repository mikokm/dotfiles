mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/obj-android

# Enable debug builds
ac_add_options --enable-debug
ac_add_options --enable-debug-symbols

#ac_add_options --enable-optimize

# Enable ccache
# ac_add_options --with-ccache=/usr/bin/ccache

# Rebuild the source tree if needed
mk_add_options AUTOCLOBBER=1

# Build GeckoView/Firefox for Android:
ac_add_options --enable-application=mobile/android

ac_add_options --target=x86_64

# With the following Android SDK and NDK:
ac_add_options --with-android-sdk="/home/miko/.mozbuild/android-sdk-linux"
ac_add_options --with-android-ndk="/home/miko/.mozbuild/android-ndk-r21d"

#ac_add_options --with-java-bin-path=/usr/lib/jvm/java-1.8.0/bin
#ac_add_options --with-java-bin-path=/usr/lib/jvm/java-17/bin

