mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/obj-ff-dbg-icc

mk_add_options MOZ_MAKE_FLAGS="-s -j64"

ac_add_options --enable-debug
ac_add_options --enable-debug-symbols
ac_add_options --disable-optimize

#ac_add_options --with-ccache=/usr/local/bin/ccache

mk_add_options AUTOCLOBBER=1

export LLVM_HOME="/usr/lib/llvm-5.0"
mk_add_options "export ICECC_CC=$LLVM_HOME/bin/clang"
mk_add_options "export ICECC_CXX=$LLVM_HOME/bin/clang++"

CC="/usr/lib/icecc/bin/cc"
CXX="/usr/lib/icecc/bin/c++"
